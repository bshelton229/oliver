.row
  .col-xs-6
    .page-header
      %h1 Login
    =simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      .form-group
        =f.input :email, :required => false, :autofocus => true, input_html: { class: 'form-control input-lg'}
        =f.input :password, :required => false, input_html: { class: 'form-control input-lg'}
        -if devise_mapping.rememberable?
          .checkbox
            %label
              =f.check_box :remember_me
              Remember Me
      =f.button :submit, "Sign in", class: 'btn btn-primary btn-lg'

.row
  .col-xs-6{style: 'padding-top:10px'}
    =render "devise/shared/links"
